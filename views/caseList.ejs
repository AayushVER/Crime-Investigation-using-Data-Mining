<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/profileListStyles.css">
    <link rel="stylesheet" href="/css/navbarStyles.css">
    <script src="/searchBar.js"></script>
  </head>
  <body>
  <nav class="navbar">
    <div class="container">
        <h2 class="nav-brand">Cases List</h2>
        <a href="/dashboard"><img class="nav-item" src="/homeIcon.svg" alt="home-button"></a>
    </div>
  </nav>


  <div class="container search-area-cases">
    <form class="search-button-form form-inline" action="/cases" method="post">
    <div class="form-check form-check-inline">
          <input class="form-check-input caseId-value" type="radio" name="searchOption" id="inlineRadio1" value="caseId">
          <label class="form-check-label" for="inlineRadio1">Case ID</label>
    </div>
    <div class="form-check form-check-inline">
          <input class="form-check-input caseTitle-value" type="radio" name="searchOption" id="inlineRadio2" value="caseTitle">
          <label class="form-check-label" for="inlineRadio2">Case Title</label>
    </div>
      <input class="form-control search-bar w-50 mr-1" type="text" name="searchValue" placeholder="Find case by">
      <button type="submit" class="btn btn-outline-dark btn-sm" name="searchButton"><img class="button-img" src="/searchButton.svg"></button>
    </form>
  </div>

    <div class="container profile-body">
      <p class="failure-text"><%= failure %></p>
      <%  if(cases.length>0){ %>
      <%   cases.forEach(function(eachCase){ %>
      <div class="row">
          <div class="col-sm">
              <div class="card">
                <a class="name-color-match" href="/findcase/<%= eachCase._id %>">
                  <div class="card-body">
                      <h2 class="card-title">Case ID : <%= eachCase._id %> - <%= eachCase.subjectOrTitle %></h2>
                      <% let des = eachCase.description.substring(0,100) %>
                      <p class="card-subtitle"><%= des %></p>
                  </div>
                </a>
              </div>
          </div>
      </div>
  <%  })} else { %>
    <div class="row">
        <div class="col-sm">
            <div class="card">
              <a class="name-color-match" href="/findcase/<%= cases._id %>">
                <div class="card-body">
                    <h2 class="card-title">Case ID : <%= cases._id %> - <%= cases.subjectOrTitle %></h2>
                    <% let des = cases.description.substring(0,100) %>
                    <p class="card-subtitle"><%= des %></p>
                </div>
              </a>
            </div>
        </div>
    </div>
    <%  }%>
    </div>
    <script src="/searchBar.js"></script>
 </body>
</html>
